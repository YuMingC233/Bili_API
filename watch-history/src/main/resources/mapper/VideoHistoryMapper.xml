<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.dao.VideoHistoryDao">
    <resultMap id="BaseResultMap" type="com.atguigu.spingcloud.entities.Payment">
        <id column="id" property="id" javaType="INT"/>
        <id column="comment" property="comment" javaType="VARCHAR"/>
        <id column="hotnewsId" property="hotnewsId" javaType="INT"/>
        <id column="commentTime" property="commentTime" javaType="DATE"/>
    </resultMap>
    <select id="getPaymentById" parameterType="int" resultMap="BaseResultMap">
        select * from t_comment where id=#{id}

    </select>
</mapper>